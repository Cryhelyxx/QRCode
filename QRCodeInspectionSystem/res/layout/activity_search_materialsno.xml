<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_bg"
    android:orientation="vertical" >

    <include layout="@layout/search_custom_title_bar" />

    <org.gditc.qrcode.app.SearchEditText
        android:id="@+id/search_materialNo"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_margin="3dip"
        android:background="@drawable/search_bar_edit_selector"
        android:drawableLeft="@drawable/actionbar_search_icon"
        android:hint="@string/tip_search_materialsNo"
        android:singleLine="true"
        android:textColor="#000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="?android:attr/listDivider" />

    <ListView
        android:id="@+id/materialsNo_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false" />

</LinearLayout>