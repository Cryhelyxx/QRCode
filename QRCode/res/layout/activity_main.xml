<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/main_custom_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/default_bg"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <Button
                android:id="@+id/btn_scan"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/button_selector"
                android:text="@string/scan_qrcode"
                android:textColor="#fff"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/btn_materialsNo"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/button_materialsno_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:text="@string/materialsNo"
                    android:textColor="#f00"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/materialsNo"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:text="@string/scan_data"
                    android:textColor="#000"
                    android:textSize="16sp" />
                
                <ImageView 
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:layout_margin="5dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrow"
                    android:layout_marginRight="5dip"
                    android:contentDescription="@string/imageDesc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/layout_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="0dip"
                android:paddingLeft="0dip"
                android:paddingRight="0dip"
                android:paddingTop="0dip" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_title_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dip"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/ledgerInfo"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/cardNo"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/cardNo"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:text="@string/scan_data"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/devicesNo"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/devicesNo"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:minLines="3"
                        android:singleLine="false"
                        android:text="@string/scan_data"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/commissioningDate"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/commissioningDate"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:text="@string/scan_data"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/manufacturer"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/manufacturer"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:minLines="3"
                        android:singleLine="false"
                        android:text="@string/scan_data"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/remark"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/remark"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:minLines="3"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:text="@string/scan_data"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/cost"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/cost"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:text="@string/scan_data"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_edit_ledger_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_edit_selector"
                    android:text="@string/edit"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/layout_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="0dip"
                android:paddingLeft="0dip"
                android:paddingRight="0dip"
                android:paddingTop="0dip" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_title_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dip"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:singleLine="true"
                        android:text="@string/cardInfo"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/FID"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/FID"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:text="@string/scan_data"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/assetsName"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/assetsName"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:minLines="3"
                        android:singleLine="false"
                        android:text="@string/scan_data"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/specification"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/specification"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:text="@string/scan_data"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/manufacturer1"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/manufacturer1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:minLines="3"
                        android:singleLine="false"
                        android:text="@string/scan_data"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/commissioningDate"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/commissioningDate01"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:text="@string/scan_data"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/propertyRight"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/propertyRight"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:text="@string/scan_data"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_edit_card_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_edit_selector"
                    android:text="@string/edit"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/layout_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="0dip"
                android:paddingLeft="0dip"
                android:paddingRight="0dip"
                android:paddingTop="0dip" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_title_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dip"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/note"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <TextView
                    android:id="@+id/notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:minLines="4"
                    android:singleLine="false"
                    android:text="@string/tip_null"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_edit_note"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_edit_selector"
                    android:text="@string/edit"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>